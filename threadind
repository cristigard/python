import threading
import time

def thread_1():
    print("Thread 1 started")
    for i in range(5):
        print(f"Inside thread 1 by: {i} sec")
        time.sleep(1)
    print("Thread 1 finished")

def thread_2():
    print("Thread 2 started")
    t1.join()  # Wait for thread 1 to finish to perform close thread 2
    print("Thread 2 closing")

t1 = threading.Thread(target=thread_1)
t2 = threading.Thread(target=thread_2)

t1.start()
t2.start()

t1.join()  # Wait for thread 1 to finish to perfrom the rest of code

print('exit program')
