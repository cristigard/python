#GET INFO FOR SHEET
from openpyxl import Workbook
wb = load_workbook(filename='C:/Users/USER IT-04/Desktop/conturi contabile folosite in Odoo.xlsx')
#select Sheet1
sheet_1 = wb['Sheet1']

#get min,max row, min max col
sheet_1.min_row
sheet_1.max_row
sheet_1.min_column
sheet_1.max_column

#get a list of all sheets
wb.sheetnames

#get a sheet title
sheet_1.title

